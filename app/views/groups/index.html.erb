<% @title = 'Groups' %>

<p><%= link_to 'New group', new_group_path %></p>

<ul class="groups">
<% @groups.each do |group| %>
  <li>
    <%= link_to group.name, group_contacts_path(group) %>
    (Total: <%= group.contacts.count %>,
    Male: <%= group.contacts.male.count %>,
    Female: <%= group.contacts.female.count %>)
  </li>
<% end %>
</ul>
